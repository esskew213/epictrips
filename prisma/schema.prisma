// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
    id         String      @id
  name          String
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  trips         Trip[]
  likedTrips    TripLike[]
  bio       String?

  // adhering to naming conventions of plural for table names
  @@map(name: "users")
}

model Trip {
    id     Int      @id @default(autoincrement())
  title     String
  public Boolean @default(false)
  startDate DateTime? @map(name: "start_date")
  dailyPlan DailyPlan[]
  likes TripLike[]
    createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  author    User?   @relation(fields: [authorId], references: [id])
  budget Budget?
  // this is the foreign key that connects user and trip tables
  authorId  String?
     tags TripTag[]
}

model DailyPlan {
   id     Int      @id @default(autoincrement())
  predecessorId Int?
  successor   DailyPlan?   @relation("DailyPlanList")
  predecessor DailyPlan?   @relation("DailyPlanList" , fields: [predecessorId], references: [id])
   notes String?
   tripId Int
   trip Trip @relation(fields: [tripId], references: [id])

}

model TripTag {
     id     Int      @id @default(autoincrement())
  tripId Int
   trip Trip @relation(fields: [tripId], references: [id])
   tag  Tag

}
model TripLike {
     id     Int      @id @default(autoincrement())
  likedBy User   @relation(fields: [userId], references: [id])
  userId String
  trip  Trip @relation(fields: [tripId], references: [id])
     tripId Int
}

enum Budget {
  BUDGET
  MODERATE
  LUXURIOUS
}

enum Tag {
  HIKING
  ROADTRIP
  SOLO
  ROMANTIC
  FAMILY
  THRILLSEEKING
  CHILL
}

